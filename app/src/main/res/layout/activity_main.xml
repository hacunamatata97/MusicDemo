<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/text_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_current_time"
        android:layout_centerHorizontal="true"
        android:text="@string/song_name"
        android:textSize="@dimen/song_name_text_size"/>

    <TextView
        android:id="@+id/text_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar"
        android:layout_marginStart="@dimen/timer_margin"
        android:text="@string/default_time"
        android:textSize="@dimen/timer_text_size"/>

    <TextView
        android:id="@+id/text_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/timer_margin"
        android:text="@string/default_time"
        android:textSize="@dimen/timer_text_size"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/seek_bar_margin"/>

    <ImageView
        android:id="@+id/image_change_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_play_on_press"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/image_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:layout_marginEnd="@dimen/seek_bar_margin"
        android:layout_toStartOf="@id/image_change_state"
        android:src="@drawable/btn_prev_on_press"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/image_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/seek_bar_margin"
        android:layout_toEndOf="@id/image_change_state"
        android:src="@drawable/btn_next_on_press"
        tools:ignore="ContentDescription"/>

</RelativeLayout>
